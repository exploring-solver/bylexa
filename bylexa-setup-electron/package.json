{
  "name": "bylexa-installer",
  "version": "1.0.0",
  "description": "Desktop installer for Bylexa and Ollama",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.bylexa.installer",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Bylexa"
    }
  },
  "dependencies": {
    "electron": "^33.1.0",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^2.0.0"
  }
}
